int j = 1;
            Console.ForegroundColor = ConsoleColor.DarkGreen;
            Console.BackgroundColor = ConsoleColor.Black;
            Console.Clear();
            string gwiazdka ="*";
            string spacja = " ";
            Console.SetCursorPosition(Console.WindowWidth / 2, 0);
            Console.WriteLine(gwiazdka);
            for (int i = 1; i < 5; i++)
            { 
                
                Console.SetCursorPosition((Console.WindowWidth / 2 - i), i);
                Console.WriteLine(gwiazdka + spacja);
                Console.SetCursorPosition(Console.WindowWidth / 2 + j, i);
                Console.WriteLine(spacja + gwiazdka);
                j++;


            }
            j = 1;
            for (int i = 5; i < 10; i++)
            {  
                Console.SetCursorPosition((Console.WindowWidth / 2 - j), i);
                
                Console.WriteLine(gwiazdka + spacja);
                Console.SetCursorPosition(Console.WindowWidth / 2+j, i);
                Console.WriteLine(spacja + gwiazdka);
                j++;


            }
            j = 1;
            for (int i = 10; i < 15; i++)
            {
                Console.SetCursorPosition((Console.WindowWidth / 2 - j), i);
                Console.WriteLine(gwiazdka + spacja);
                Console.SetCursorPosition(Console.WindowWidth / 2 + j, i);
                Console.WriteLine(spacja + gwiazdka);
                j++;



            }
            j = 1;
            for (int i = 15; i < 20; i++)
            {
                Console.SetCursorPosition((Console.WindowWidth / 2 - j), i);
                Console.WriteLine(gwiazdka + spacja);
                Console.SetCursorPosition(Console.WindowWidth / 2 + j, i);
                Console.WriteLine(spacja + gwiazdka);
                j++;


            }
            j = 1;
            for (int i = 20; i < 25; i++)
            {
                Console.SetCursorPosition((Console.WindowWidth / 2 - j), i);
                Console.WriteLine(gwiazdka + spacja);
                Console.SetCursorPosition(Console.WindowWidth / 2 + j, i);
                Console.WriteLine(spacja + gwiazdka);
                j++;



            }

            for (int i = 25; i < 30; i++)
            {   if (Console.WindowHeight >= 25)
                Console.ForegroundColor = ConsoleColor.DarkYellow;
                Console.SetCursorPosition(Console.WindowWidth / 2, i);
                Console.WriteLine(gwiazdka);
            }
            Console.ReadKey();
